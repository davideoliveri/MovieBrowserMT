{
  "name": "moviebrowsermt",
  "version": "1.0.0",
  "type": "module",
  "description": "Movie browser demo project",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node ./server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cross-env VITE_BUILD_MODE=ssr_client vite build",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "serve": "cross-env NODE_ENV=production node ./server.js",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "format": "prettier --write .",
    "test": "echo \"Error: no test YET \" && exit 1"
  },
  "author": "Davide Oliveri",
  "license": "MIT",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@react-router/node": "^7.7.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "compression": "^1.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "express": "^5.1.0",
    "prettier": "^3.6.2",
    "react-router-dom": "^7.7.0",
    "sass": "^1.89.2",
    "sirv": "^3.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.4"
  }
}
